{% extends 'base.html.twig' %}

{% block title %}Nouveau contacts{% endblock %}

{% block description %}Ajouter un nouveau contact a la liste {% endblock %}

{% block keywords %}nouveau, contact{% endblock %}

{% block main %}
    <h1 class="text-center display-5 my-3">Nouveau contacts</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-4 mx-auto p-4 bg-white shadow">
            {{form_start(form)}}
                <div class="mb-3">
                    <label for="contact_from_firstName">Prénom</label>
                    {{ form_widget(form.firstName, {'attr':{'class': 'form-control', 'autofocus':'autofocus'}})}}
                </div>
                <div class="mb-3">
                    <label for="contact_from_lastName">Nom</label>
                    {{ form_widget(form.lastName, {'attr':{'class': 'form-control'}})}}

                </div>
                <div class="mb-3">
                    <label for="contact_from_email">Email</label>
                    {{ form_widget(form.email, {'attr':{'class': 'form-control'}})}}

                </div>
                <div class="mb-3">
                    <label for="contact_from_phone">Numéro de télephone</label>
                    {{ form_widget(form.phone, {'attr':{'class': 'form-control'}})}}

                </div>
                <div class="mb-3">
                    <label for="contact_from_comment">Commentaires</label>
                    {{ form_widget(form.comment, {'attr':{'class': 'form-control', 'rows' :4}})}}

                </div>
                <div>
                    <input formnovalidate type="submit" value="Ajouter" class="btn btn-primary w-100 shadow">
                </div>
            {{form_end(form)}}
    </div>

{% endblock %}